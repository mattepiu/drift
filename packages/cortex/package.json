{
  "name": "driftdetect-cortex",
  "version": "0.9.46",
  "description": "Drift Cortex - AI memory system that understands code as code, not text. Provides tribal knowledge, pattern rationales, procedural memory, and self-healing validation.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/dadbodgeoff/drift"
  },
  "homepage": "https://github.com/dadbodgeoff/drift#readme",
  "keywords": [
    "ai-memory",
    "code-intelligence",
    "tribal-knowledge",
    "pattern-rationale",
    "semantic-memory",
    "episodic-memory",
    "consolidation",
    "embeddings",
    "vector-search",
    "sqlite",
    "mcp"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    },
    "./storage": {
      "types": "./dist/storage/index.d.ts",
      "import": "./dist/storage/index.js"
    },
    "./embeddings": {
      "types": "./dist/embeddings/index.d.ts",
      "import": "./dist/embeddings/index.js"
    },
    "./retrieval": {
      "types": "./dist/retrieval/index.d.ts",
      "import": "./dist/retrieval/index.js"
    },
    "./consolidation": {
      "types": "./dist/consolidation/index.d.ts",
      "import": "./dist/consolidation/index.js"
    },
    "./validation": {
      "types": "./dist/validation/index.d.ts",
      "import": "./dist/validation/index.js"
    },
    "./decay": {
      "types": "./dist/decay/index.d.ts",
      "import": "./dist/decay/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "sqlite-vec": "^0.1.6",
    "@xenova/transformers": "^2.17.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "driftdetect-core": "^0.9.0"
  }
}
