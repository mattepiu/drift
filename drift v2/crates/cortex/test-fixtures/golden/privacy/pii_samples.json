{
  "description": "Known PII strings â†’ expected sanitized output with correct placeholders",
  "input": {
    "samples": [
      {
        "id": "pii-01",
        "text": "Contact [name] at [email]@example.com for the API key",
        "raw_text": "Contact John Smith at john.smith@example.com for the API key",
        "expected_detections": ["email"]
      },
      {
        "id": "pii-02",
        "text": "SSN is 123-45-6789, please update the record",
        "expected_detections": ["ssn"],
        "expected_output": "SSN is [SSN], please update the record"
      },
      {
        "id": "pii-03",
        "text": "Call me at 555-123-4567 or email test@company.org",
        "expected_detections": ["phone", "email"],
        "expected_output_contains": ["[PHONE]", "[EMAIL]"]
      },
      {
        "id": "pii-04",
        "text": "Credit card: 4111-1111-1111-1111, exp 12/25",
        "expected_detections": ["credit_card"],
        "expected_output_contains": ["[CREDIT_CARD]"]
      },
      {
        "id": "pii-05",
        "text": "Server IP is 192.168.1.100 and backup is at 10.0.0.50",
        "expected_detections": ["ipv4"],
        "expected_output_contains": ["[IP_ADDRESS]"]
      },
      {
        "id": "pii-06",
        "text": "Patient DOB: 03/15/1990, Medicare ID: 123-456-789",
        "expected_detections": ["dob", "medicare"],
        "expected_output_contains": ["[DOB]", "[HEALTH_ID]"]
      },
      {
        "id": "pii-07",
        "text": "Ship to 123 Main Street, billing at 456 Oak Avenue",
        "expected_detections": ["address"],
        "expected_output_contains": ["[ADDRESS]"]
      },
      {
        "id": "pii-08",
        "text": "MAC address of the device: AA:BB:CC:DD:EE:FF",
        "expected_detections": ["mac_address"],
        "expected_output_contains": ["[MAC_ADDRESS]"]
      }
    ]
  },
  "expected_output": {
    "all_pii_detected": true,
    "no_pii_in_sanitized_output": true,
    "placeholder_format": "[TYPE]"
  }
}
