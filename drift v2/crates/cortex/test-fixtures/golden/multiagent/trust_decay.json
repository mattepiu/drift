{
  "description": "Trust decay: trust score drifts toward 0.5 (neutral) over time without new evidence. Formula: trust + (0.5 - trust) × (1 - decay_rate^days).",
  "input": {
    "initial_trust": 0.8,
    "decay_rate": 0.99,
    "scenarios": [
      { "days_since_evidence": 50 },
      { "days_since_evidence": 100 }
    ]
  },
  "expected_output": {
    "formula": "trust_new = trust + (0.5 - trust) × (1 - decay_rate^days)",
    "scenarios": [
      {
        "days": 50,
        "calculation": "0.8 + (0.5 - 0.8) × (1 - 0.99^50) = 0.8 + (-0.3) × (1 - 0.6050) = 0.8 + (-0.3) × 0.3950 = 0.8 - 0.1185 = 0.6815",
        "expected_trust": 0.6815,
        "tolerance": 0.001
      },
      {
        "days": 100,
        "calculation": "0.8 + (0.5 - 0.8) × (1 - 0.99^100) = 0.8 + (-0.3) × (1 - 0.3660) = 0.8 + (-0.3) × 0.6340 = 0.8 - 0.1902 = 0.6098",
        "expected_trust": 0.6098,
        "tolerance": 0.001
      }
    ],
    "notes": "Trust always drifts toward 0.5 (neutral). High trust decays down, low trust decays up. Rate 0.99 means ~1% daily drift toward neutral."
  }
}
