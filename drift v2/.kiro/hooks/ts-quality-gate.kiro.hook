{
  "enabled": true,
  "name": "TS Quality Gate",
  "description": "Runs the TypeScript quality gate (Prettier, tsc, ESLint, Vitest) for packages/cortex. Trigger manually at the end of a sprint.",
  "version": "1",
  "when": {
    "type": "userTriggered"
  },
  "then": {
    "type": "askAgent",
    "prompt": "Run `./scripts/quality-gate.sh` from `packages/cortex/` to verify the TypeScript quality gate passes. Fix any failures."
  }
}
