{
  "name": "drift-napi",
  "version": "0.1.0",
  "description": "Native NAPI-RS bindings for the Drift analysis engine",
  "main": "index.js",
  "types": "index.d.ts",
  "napi": {
    "binaryName": "drift-napi",
    "targets": [
      "aarch64-apple-darwin",
      "x86_64-apple-darwin",
      "x86_64-unknown-linux-gnu",
      "aarch64-unknown-linux-gnu",
      "x86_64-pc-windows-msvc"
    ]
  },
  "scripts": {
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "prepublishOnly": "napi prepublish -t npm",
    "artifacts": "napi artifacts"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "*.node"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@napi-rs/cli": "^3.5.1"
  }
}
