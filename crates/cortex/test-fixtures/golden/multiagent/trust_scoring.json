{
  "description": "Trust scoring: agent with known evidence. Formula: (validated + useful) / (total + 1) × (1 - contradicted / (total + 1)).",
  "input": {
    "agent_id": "agent-observer",
    "target_agent": "agent-target",
    "evidence": {
      "validated_count": 5,
      "contradicted_count": 1,
      "useful_count": 3,
      "total_received": 10
    }
  },
  "expected_output": {
    "formula": "(validated + useful) / (total + 1) × (1 - contradicted / (total + 1))",
    "calculation": {
      "positive_factor": "(5 + 3) / (10 + 1) = 8 / 11 ≈ 0.72727",
      "negative_factor": "1 - 1 / (10 + 1) = 1 - 1/11 = 10/11 ≈ 0.90909",
      "overall_trust": "0.72727 × 0.90909 ≈ 0.66116"
    },
    "overall_trust": 0.66116,
    "overall_trust_tolerance": 0.001,
    "trust_bounds": [0.0, 1.0],
    "notes": "Contradictions have outsized impact via multiplication. This asymmetric penalty creates a conservative trust model."
  }
}
