{
  "description": "Epistemic lifecycle: one memory going through Conjecture → Provisional → Verified → Stale",
  "memory_id": "golden-epistemic-1",
  "stages": [
    {
      "stage": "initial",
      "action": "create memory",
      "expected_status": {
        "status": "conjecture",
        "source": "user:alice"
      }
    },
    {
      "stage": "after_validation",
      "action": "promote_to_provisional with evidence_count=3",
      "expected_status": {
        "status": "provisional",
        "evidence_count": 3
      }
    },
    {
      "stage": "after_verification",
      "action": "promote_to_verified by ['agent-reviewer', 'user:bob'] with evidence_refs=['review-1', 'test-suite-pass']",
      "expected_status": {
        "status": "verified",
        "verified_by": ["agent-reviewer", "user:bob"],
        "evidence_refs": ["review-1", "test-suite-pass"]
      }
    },
    {
      "stage": "after_staleness",
      "action": "demote_to_stale with reason='Evidence links expired after 90 days'",
      "expected_status": {
        "status": "stale",
        "reason": "Evidence links expired after 90 days"
      }
    }
  ],
  "invalid_transitions": [
    { "from": "conjecture", "to": "verified", "should_error": true },
    { "from": "verified", "to": "provisional", "should_error": true },
    { "from": "provisional", "to": "stale", "should_error": true },
    { "from": "stale", "to": "verified", "should_error": true },
    { "from": "stale", "to": "provisional", "should_error": true }
  ]
}